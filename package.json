{
  "name": "@koech-design-lab/root",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "shared/*",
    "api/*"
  ],
  "scripts": {
    "dev": "npm run dev:canvas",
    "dev:canvas": "npm run dev --workspace=@koech-design-lab/canvas",
    "dev:studio": "npm run dev --workspace=@koech-design-lab/studio",
    "build": "npm run build --workspaces",
    "build:canvas": "npm run build --workspace=@koech-design-lab/canvas",
    "build:studio": "npm run build --workspace=@koech-design-lab/studio",
    "lint": "npm run lint --workspaces",
    "preview": "npm run preview --workspaces",
    "clean": "rm -rf node_modules && rm -rf */node_modules && rm -rf */*/node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0"
  }
}
